<odoo>
    <record id="res_partner_view_form_connector_sap" model="ir.ui.view">
        <field name="name">res.partner.sap.connector.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="connector.view_partner_connector_form"/>
        <field name="arch" type="xml">
            <page name="connector" position="attributes">
                <attribute name="invisible">0</attribute>
            </page>
            <page name="connector" position="inside">
                <group string="SAP Bindings">
                    <field name="sap_bind_ids" nolabel="1"/>
                </group>
            </page>
        </field>
    </record>

    <record id="sap_res_partner_view_form" model="ir.ui.view">
        <field name="name">sap.res.partner.form</field>
        <field name="model">sap.res.partner</field>
        <field name="arch" type="xml">
            <form string="SAP Partner">
                <header>
                    <button name="resync_import" type="object" class="oe_highlight" string="Resync"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group>
                        <field name="backend_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="odoo_id" readonly="1"/>
                        <field name="sap_cardcode" readonly="1"/>
                        <field name="sap_rownum" readonly="1"/>
                        <field name="sap_addressname" readonly="1"/>
                    </group>
                    <group>
                        <field name="sync_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sap_res_partner_manager_view_form" model="ir.ui.view">
        <field name="name">sap.res.partner.manager.form</field>
        <field name="model">sap.res.partner</field>
        <field name="inherit_id" ref="connector_sap.sap_res_partner_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('connector.group_connector_manager')])]"/>
        <field name="arch" type="xml">
            <field name="backend_id" position="attributes">
                <attribute name="readonly">0</attribute>
                <attribute name="attrs">{'readonly': [('id', '!=', False)]}</attribute>
            </field>
            <field name="odoo_id" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
            <field name="sap_cardcode" readonly="1"/>
            <field name="sap_rownum" readonly="1"/>
            <field name="sap_addressname" readonly="1"/>
        </field>
    </record>

    <record id="sap_res_partner_view_tree" model="ir.ui.view">
        <field name="name">sap.res.partner.tree</field>
        <field name="model">sap.res.partner</field>
        <field name="arch" type="xml">
            <tree string="SAP Partner">
                <field name="backend_id"/>
                <field name="odoo_id"/>
                <field name="sap_cardcode" readonly="1"/>
                <field name="sap_rownum" readonly="1"/>
                 <field name="sap_addressname" readonly="1"/>

                <field name="sync_date"/>
                <button name="resync_export" type="object"
                        string="Resynchronize" icon="fa-refresh fa-lg"/>
            </tree>
        </field>
    </record>

    <record id="sap_res_partner_view_search" model="ir.ui.view">
        <field name="name">sap.res.partner.search</field>
        <field name="model">sap.res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Partner">
                <field name="odoo_id" filter_domain="[('odoo_id','ilike',self)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_backend" string="Backend" domain="[]" context="{'group_by' : 'backend_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sap_res_partner_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">sap.res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
