<odoo>
    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">project.task.form.timeline.calendar</field>
        <field name="model">project.task</field>
        <field name="priority" eval="100" />
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_assign']/.." position="after">
                <group>
                    <span name="date_start_placeholder" invisible="1" />
                    <span name="date_end_placeholder" invisible="1" />
                </group>
            </xpath>
            <xpath
                expr="(//field[@name='date_start'] | //span[@name='date_start_placeholder'])[1]"
                position="replace"
            >
                <field name="date_start" />
            </xpath>
            <xpath
                expr="(//field[@name='date_end'] | //span[@name='date_end_placeholder'])[1]"
                position="replace"
            >
                <field name="date_end" />
            </xpath>
        </field>
    </record>

    <record id="view_task_calendar" model="ir.ui.view">
        <field name="name">project.task.calendar.timeline.calendar</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_calendar" />
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="date_start">date_start</attribute>
                <attribute name="date_stop">date_end</attribute>
                <attribute name="mode">week</attribute>
            </xpath>
        </field>
    </record>
</odoo>
