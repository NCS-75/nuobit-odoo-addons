<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="model">product.template.investment.good.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account_asset.view_product_template_form_inherit"/>
        <field name="arch" type="xml">
           <field name="asset_category_id" position="after">
                <field name="investment_good_type" domain="[('type', '=', 'purchase')]"
                       context="{'default_type': 'purchase'}" groups="account.group_account_user"/>
            </field>
        </field>
    </record>
</odoo>
